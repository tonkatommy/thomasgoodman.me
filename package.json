    "private": true,
    "description": "Personal portfolio and professional showcase for Thomas Goodman",
    "author": "Thomas Goodman",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tonkatommy/thomasgoodman.me.git"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
